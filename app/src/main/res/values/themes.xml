<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarServiceWale" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="actionModeBackground">@color/contextualActionBarColor</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>
    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_14dp</item>
    </style>
    <style name="CustomTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/button_background</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="actionModeBackground">@color/contextualActionBarColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>
    <color name="colorSplashDark">#833193</color>
    <color name="black_new">#141414</color>
    <color name="boxStrokeColor">#5a189a</color>

    <style name="ShapeAppearance.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">30dp</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="MaterialAlertDialog.Rounded" parent="MaterialAlertDialog.MaterialComponents">
        <item name="cornerSize">30dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialAlertDialog.Rounded</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="ThemeOverlay.MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Rounded</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="MyDialogTheme" parent="ThemeOverlay.MaterialAlertDialog.Rounded">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="RoundShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/screen_normal</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/screen_normal</item>
        <item name="colorPrimaryDark">?android:colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/boxStrokeColor</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!--        <item name="colorOnSecondary">@color/white</item>-->
        <item name="shapeAppearanceOverlay">@style/RoundShapeAppearance</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:itemBackground">@color/screen_normal</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="cardRemoveDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/btn_benificary_dialog_bg</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/black</item>
        <item name="android:drawable">@drawable/ic_hamburgur_black_24_px</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/purpleNew</item>
        <item name="colorAccent">@color/button_background</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="popupTheme">@style/PopupMenu</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="AppTheme_NAVIGATION" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nav_bg</item>
        <item name="colorPrimaryDark">@color/nav_bg</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="NewDrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/black_new</item>
        <item name="android:drawable">@drawable/ic_hamburgur_black_24_px</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="NewToolBarStyleUpdate" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="drawerArrowStyle">@style/NewDrawerArrowStyle</item>
        <item name="android:itemTextAppearance">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="NewNowNowButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black_new</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:layout_marginTop">@dimen/dimen_24</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:padding">@dimen/dimen_14</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
        <item name="android:background">@drawable/new_btn_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
</resources>