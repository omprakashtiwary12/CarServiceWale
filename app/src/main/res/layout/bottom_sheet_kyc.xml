<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:behavior_hideable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin"
                android:gravity="left|start"
                android:maxLines="1"
                android:text="@string/get_your_kyc_done"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/dimen_text_size_20"
                app:decorTypefaceAsset="@string/robotoBold"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding"
                android:src="@drawable/menu_cross" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="left|start"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/as_per_cbn_guidelines"
            android:textColor="@color/edit_text_color"
            android:textSize="@dimen/dimen_text_size_18"
            android:visibility="visible"
            app:decorTypefaceAsset="@string/robotoMedium"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/proceed_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="18dp"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_10"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="@dimen/dimen_10"
            android:text="@string/proceed"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_16"
            app:decorTypefaceAsset="@string/robotoRegular" />

    </LinearLayout>

</RelativeLayout>